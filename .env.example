# Mental Health Platform - Environment Variables
# Copy this file to .env.local and update with your actual API keys

# ==========================================
# AI SERVICES (Update with your actual keys)
# ==========================================
VITE_OPENAI_API_KEY=sk-proj-your-openai-key-here
VITE_ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here  
VITE_GEMINI_API_KEY=AIza-your-gemini-key-here

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
VITE_APP_TITLE="Mental Health Platform"
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=https://your-backend.netlify.app/api
VITE_WEBSOCKET_URL=wss://your-backend.netlify.app

# ==========================================
# CRISIS SERVICES CONFIGURATION  
# ==========================================
VITE_988_HOTLINE_ENABLED=true
VITE_CRISIS_DETECTION_ENABLED=true
VITE_EMERGENCY_SERVICES_ENABLED=true
VITE_CRISIS_CHAT_ENABLED=true

# ==========================================
# FEATURES FLAGS
# ==========================================
VITE_AI_CHATBOT_ENABLED=true
VITE_TELETHERAPY_ENABLED=true
VITE_BIOMETRIC_TRACKING_ENABLED=true
VITE_SOCIAL_FEATURES_ENABLED=true
VITE_GAMIFICATION_ENABLED=true

# ==========================================
# SECURITY & COMPLIANCE
# ==========================================
VITE_HIPAA_MODE=true
VITE_ANALYTICS_ENABLED=false
VITE_ERROR_REPORTING_ENABLED=true
VITE_AUDIT_LOGGING_ENABLED=true

# ==========================================
# PWA CONFIGURATION
# ==========================================
VITE_PWA_ENABLED=true
VITE_OFFLINE_MODE_ENABLED=true
VITE_PUSH_NOTIFICATIONS_ENABLED=true

# ==========================================
# DEVELOPMENT/STAGING SETTINGS
# ==========================================
VITE_NODE_ENV=production
VITE_DEBUG_MODE=false
VITE_MOCK_SERVICES=false