{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "ES2021.String",
      "ES2021.Promise",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": ["src/components/*"],
      "@views/*": ["src/views/*"],
      "@services/*": ["src/services/*"],
      "@stores/*": ["src/stores/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@hooks/*": ["src/hooks/*"],
      "@assets/*": ["src/assets/*"]
    },
    "types": [],
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "removeComments": true,
    "importsNotUsedAsValues": "remove",
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "index.tsx",
    "src/types/**/*",
    "src/types/jest-dom.d.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "backup-*",
    "vite.config.ts",
    "src/middleware/**/*",
    "tests/integration/ai-therapy-chat.test.ts",
    "tests/integration/anonymous-auth-flow.test.ts",
    "tests/integration/api-endpoints.test.ts",
    "tests/integration/community-features.test.ts",
    "tests/integration/comprehensive-crisis-detection.test.ts",
    "tests/integration/crisis-detection-validation.test.ts",
    "tests/integration/crisisDetectionEscalationIntegration.test.ts",
    "tests/integration/crisisEscalationWorkflowIntegration.test.ts",
    "tests/integration/data-persistence-encryption.test.ts",
    "tests/integration/emergency-features-988-integration.test.ts",
    "tests/integration/enhancedCrisisDetectionIntegration.test.ts",
    "tests/integration/mobile-responsiveness.test.ts",
    "tests/integration/pwa-offline-capabilities.test.ts",
    "tests/integration/tether-connection-system.test.ts"
  ]
}