# ================================================================================================
# ASTRAL CORE MENTAL HEALTH PLATFORM - SECURE ENVIRONMENT TEMPLATE
# ================================================================================================
# SECURITY NOTICE: This is a template for secure configuration
# DO NOT commit actual values to version control
# Use secret management service (e.g., Netlify Environment Variables, AWS Secrets Manager)
# ================================================================================================

# ============================================================================
# CORE ENVIRONMENT SETTINGS
# ============================================================================
NODE_ENV=production
VITE_BUILD_MODE=production
VITE_APP_VERSION=5.1.0-secure

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Encryption Keys (Generate using: openssl rand -hex 32)
ENCRYPTION_KEY=GENERATE_NEW_KEY_DO_NOT_USE_THIS
ENCRYPTION_IV=GENERATE_NEW_IV_DO_NOT_USE_THIS

# JWT Configuration
JWT_SECRET=GENERATE_NEW_SECRET_DO_NOT_USE_THIS
JWT_REFRESH_SECRET=GENERATE_NEW_SECRET_DO_NOT_USE_THIS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=GENERATE_NEW_SECRET_DO_NOT_USE_THIS
SESSION_COOKIE_NAME=__astral_session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_TIMEOUT=1800000

# CSRF Protection
CSRF_SECRET=GENERATE_NEW_SECRET_DO_NOT_USE_THIS
CSRF_COOKIE_NAME=__astral_csrf

# ============================================================================
# API CONFIGURATION (Use Environment Variables in Production)
# ============================================================================
# OpenAI Configuration
VITE_OPENAI_API_KEY=${OPENAI_API_KEY}
VITE_OPENAI_ORG_ID=${OPENAI_ORG_ID}

# Anthropic Configuration
VITE_ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Google Gemini Configuration
VITE_GOOGLE_GEMINI_API_KEY=${GOOGLE_GEMINI_API_KEY}

# ============================================================================
# DATABASE CONFIGURATION (Encrypted Connection)
# ============================================================================
DATABASE_URL=${DATABASE_URL}
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true
DATABASE_CONNECTION_LIMIT=10
DATABASE_CONNECTION_TIMEOUT=30000

# Supabase Configuration
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
SUPABASE_SERVICE_KEY=${SUPABASE_SERVICE_KEY}

# ============================================================================
# AUTHENTICATION PROVIDERS
# ============================================================================
# Auth0 Configuration
AUTH0_DOMAIN=${AUTH0_DOMAIN}
AUTH0_CLIENT_ID=${AUTH0_CLIENT_ID}
AUTH0_CLIENT_SECRET=${AUTH0_CLIENT_SECRET}
AUTH0_AUDIENCE=${AUTH0_AUDIENCE}

# ============================================================================
# MONITORING & ANALYTICS (Privacy-Compliant)
# ============================================================================
# Sentry Configuration
VITE_SENTRY_DSN=${SENTRY_DSN}
SENTRY_AUTH_TOKEN=${SENTRY_AUTH_TOKEN}
SENTRY_ORG=${SENTRY_ORG}
SENTRY_PROJECT=${SENTRY_PROJECT}
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ============================================================================
# RATE LIMITING & SECURITY
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_CRISIS_BYPASS=true

# Login Rate Limiting
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MS=1800000

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CONTENT SECURITY POLICY
# ============================================================================
CSP_REPORT_URI=https://api.corev2-mental-health.app/csp-report
CSP_REPORT_ONLY=false

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGIN=https://corev2-mental-health.app
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# ============================================================================
# LOGGING & AUDIT
# ============================================================================
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90
SECURITY_LOG_ENABLED=true

# ============================================================================
# COMPLIANCE & PRIVACY
# ============================================================================
HIPAA_MODE=true
GDPR_MODE=true
DATA_RETENTION_DAYS=365
DATA_ANONYMIZATION_ENABLED=true
PRIVACY_ENHANCED_MODE=true

# ============================================================================
# BACKUP & RECOVERY
# ============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_MFA_ENABLED=true
FEATURE_ENCRYPTION_AT_REST=true
FEATURE_AUDIT_LOGGING=true
FEATURE_SESSION_RECORDING=false
FEATURE_ANONYMOUS_ANALYTICS=true

# ============================================================================
# CRISIS INTERVENTION
# ============================================================================
CRISIS_HOTLINE_ENABLED=true
CRISIS_DETECTION_ENABLED=true
CRISIS_ALERT_THRESHOLD=0.75
CRISIS_RESPONSE_TEAM_EMAIL=${CRISIS_TEAM_EMAIL}
CRISIS_ESCALATION_ENABLED=true

# ============================================================================
# EMAIL CONFIGURATION (For Notifications)
# ============================================================================
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
EMAIL_FROM=noreply@corev2-mental-health.app

# ============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# ============================================================================
DEPLOYMENT_ENV=production
CDN_URL=https://cdn.corev2-mental-health.app
API_BASE_URL=https://api.corev2-mental-health.app
WEBSOCKET_URL=wss://ws.corev2-mental-health.app

# ============================================================================
# TESTING & DEVELOPMENT (Disable in Production)
# ============================================================================
ENABLE_DEBUG_MODE=false
ENABLE_TEST_ENDPOINTS=false
ENABLE_MOCK_DATA=false
BYPASS_AUTH=false

# ============================================================================
# SECURITY HEADERS
# ============================================================================
HSTS_MAX_AGE=63072000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# ============================================================================
# END OF SECURE CONFIGURATION TEMPLATE
# ============================================================================
# REMEMBER:
# 1. Never commit real values to version control
# 2. Use environment-specific secret management
# 3. Rotate all secrets regularly
# 4. Monitor for exposed credentials
# 5. Implement secret scanning in CI/CD